<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/island"
    tools:context=".StartActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_StartGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:text="@string/start_start_game"
        android:fontFamily="@font/walyer"
        android:padding="15dp"
        android:textSize="20sp"
        android:backgroundTint="@color/colorBackground"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Settings"
        android:layout_below="@+id/btn_StartGame"
        android:layout_centerInParent="true"
        android:text="@string/start_settings"
        android:fontFamily="@font/walyer"
        android:textSize="15sp"
        android:paddingRight="52dp"
        android:paddingLeft="52dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorButtons"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_HighScores"
        android:layout_below="@id/btn_Settings"
        android:layout_centerHorizontal="true"
        android:text="@string/start_best_scores"
        android:fontFamily="@font/walyer"
        android:textColor="#000000"
        android:textSize="15sp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/colorButtons"/>

    <EditText
        android:id="@+id/edt_PutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_HighScores"/>

    <TextView
        android:id="@+id/txt_EnterYourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_enter_your_name"
        android:fontFamily="@font/walyer"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_below="@id/btn_HighScores"
        android:layout_toLeftOf="@id/edt_PutName"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"/>

    <ImageView
        android:id="@+id/logo_Start"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>

    <ImageView
        android:id="@+id/img_Stitch1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/cutestitch"/>

    <ImageView
        android:id="@+id/img_Stitch2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/img_Stitch1"
        android:background="@drawable/stitch"/>

    <ImageView
        android:id="@+id/img_Stitch3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/img_Stitch2"
        android:background="@drawable/liloandstich"/>

</RelativeLayout>