<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_background">

    <Button
        android:id="@+id/BTN_POPUP_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume Game"
        android:textSize="20dp"
        android:fontFamily="@font/walyer"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/colorPopupBottuns"/>

    <Button
        android:id="@+id/BTN_POPUP_newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New game"
        android:textSize="20dp"
        android:fontFamily="@font/walyer"
        android:layout_below="@+id/BTN_POPUP_resume"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorPopupBottuns"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:textSize="30dp"
        android:textColor="#000000"
        android:fontFamily="@font/walyer"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>

</RelativeLayout>