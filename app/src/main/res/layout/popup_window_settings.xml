<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSettings">

    <Switch
        android:id="@+id/settings_SWITCH_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="mute"
        android:textSize="25sp"
        android:fontFamily="@font/walyer"
        android:textOff="Music on"
        android:textOn="Music off"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/settings_TEXTVIEW_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="30sp"
        android:textColor="#000000"
        android:fontFamily="@font/walyer"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/settings_CHECKBOX_tilt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tilt the phone to move"
        android:textSize="15dp"
        android:fontFamily="@font/walyer"
        android:layout_below="@id/settings_SWITCH_sound"
        android:layout_centerHorizontal="true"
        android:onClick="tiltCheck"/>

    <TextView
        android:id="@+id/settings_TEXTVIEW_numLanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of lanes:"
        android:textSize="17sp"
        android:textColor="#000000"
        android:fontFamily="@font/walyer"
        android:layout_below="@id/settings_CHECKBOX_tilt"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="10dp"/>

    <Spinner
        android:id="@+id/settings_SPINNER_lanes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_CHECKBOX_tilt"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/settings_TEXTVIEW_numLanes"/>

    <Button
        android:id="@+id/settings_BTN_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/walyer"
        android:text="OK"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/settings_TEXTVIEW_numLanes"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/colorButtons"/>

</RelativeLayout>